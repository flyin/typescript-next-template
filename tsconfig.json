{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017",
            "es2018",
            "es2019"
        ],
        "sourceMap": false,
        "allowJs": false,
        "jsx": "preserve",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "src/components/*"
            ]
        },
        "skipLibCheck": false,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        ".next",
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
